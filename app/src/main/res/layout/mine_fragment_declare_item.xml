<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray_corner_4dp_white_frame"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_declare_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/mine_app_declare"
            android:textColor="@color/color_80p_black"
            android:textSize="@dimen/ts_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_declare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:text="@string/mine_app_declare_content"
            android:textSize="@dimen/ts_normal" />

        <LinearLayout
            android:id="@+id/ll_banner"
            android:layout_width="fill_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:orientation="horizontal"/>
    </LinearLayout>
</FrameLayout>